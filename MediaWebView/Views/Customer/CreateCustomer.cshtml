@model MediaAdmin.MediaEntity.Customer

@{
    Layout = "~/Views/Shared/_CreateCustomerLayout.cshtml";
    HtmlHelper.ClientValidationEnabled = false;
    HtmlHelper.UnobtrusiveJavaScriptEnabled = false;
}

<!-- Main Content -->
<div class="content-header">
    <ul class="nav-horizontal text-center">
        <li>
            <a href="CustomersList"><i class="gi gi-parents"></i> All Customers</a>
        </li>
        <li class="active">
            <a><i class="gi gi-user_add"></i> Add Customer</a>
        </li>
    </ul>
</div>
<div class="page-wrapper">
    <div class="container-fluid">
        <!-- /Title -->
        <!-- Row -->
        <div class="row">
            <div class="col-md-12">
                @*<div class="panel panel-default card-view">*@
                    <div class="block">
                        <div class="panel-heading">
                            <div class="pull-left">
                                <h3 class="block-title"><strong>Customer</strong> information</h3>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        @using (Html.BeginForm("CreateCustomer", "Customer", new { @class = "panel-wrapper collapse in", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-sm-12 col-xs-12">
                                        <div class="form-wrap">
                                            <form id="form-validation" action="#" method="post" class="form-horizontal form-bordered">
                                                <div class="form-group">
                                                    @*<h6 class="txt-dark capitalize-font"><i class="zmdi zmdi-account mr-10"></i>Customer's Info</h6>*@
                                                    <legend><i class="fa fa-angle-right"></i> Vital Info</legend>
                                                    @*<hr class="light-grey-hr" />*@
                                                    <div class="row">
                                                        @Html.ValidationSummary(true)
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label class="control-label mb-10">First Name <span class="text-danger">*</span></label>
                                                                <div class="input-group">
                                                                    @Html.TextBoxFor(m => m.Name, "", new { @class = "form-control", placeholder = "User first name" })
                                                                    <span class="input-group-addon"><i class="gi gi-user"></i></span>
                                                                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <!--/span-->
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label class="control-label mb-10">Last Name <span class="text-danger">*</span></label>
                                                                <div class="input-group">
                                                                    @Html.TextBoxFor(m => m.LastName, "", new { @class = "form-control", type = "text", placeholder = "User last name" })
                                                                    <span class="input-group-addon"><i class="gi gi-user"></i></span>
                                                                    @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <!--/span-->
                                                    </div>
                                                    <!-- /Row -->
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label class="control-label mb-10">Email <span class="text-danger">*</span></label>
                                                                <div class="input-group">
                                                                    @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", placeholder = "test@example.com" })
                                                                    <span class="input-group-addon"><i class="gi gi-envelope"></i></span>
                                                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <!--/span-->
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label class="control-label mb-10">Phone number</label>
                                                                <div class="input-group">
                                                                    @Html.TextBoxFor(m => m.PhoneNumber, "", new { @class = "form-control", placeholder = "Optional" })
                                                                    <span class="input-group-addon"><i class="gi gi-phone_alt"></i></span>
                                                                    @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <!--/span-->
                                                    </div>
                                                    <!-- /Row -->
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label class="control-label mb-10">Cell phone number</label>
                                                                <div class="input-group">
                                                                    @Html.TextBoxFor(m => m.CellPhoneNumber, "", new { @class = "form-control", placeholder = "Optional" })
                                                                    <span class="input-group-addon"><i class="gi gi-iphone"></i></span>
                                                                    @Html.ValidationMessageFor(m => m.CellPhoneNumber, "", new { @class = "text-danger" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <!--/span-->
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label class="control-label mb-10">Customer Typ</label>
                                                                @Html.DropDownListFor(m => m.CustomerTyp, Model.CustomerTypList, new { @class = "select-chosen" })
                                                            </div>
                                                        </div>
                                                        <!--/span-->
                                                    </div>
                                                    <!-- /Row -->
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <label class="control-label mb-10">Company name</label>
                                                            @Html.TextBoxFor(m => m.CompanyName, "", new { @class = "form-control", placeholder = "Optional" })
                                                        </div>
                                                    </div>

                                                    <div class="seprator-block"></div>
                                                    @*<hr class="light-grey-hr" />*@
                                                    <br />
                                                    @*<h6 class="txt-dark capitalize-font"><i class="zmdi zmdi-account-box mr-10"></i>address</h6>*@
                                                    <legend><i class="fa fa-angle-right"></i> Address</legend>

                                                    <div class="row">
                                                        <div class="col-md-12 ">
                                                            <div class="form-group">
                                                                <label class="control-label mb-10">Street</label>
                                                                @Html.TextBoxFor(m => m.Address, "", new { @class = "form-control" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label class="control-label mb-10">City</label>
                                                                @Html.TextBoxFor(m => m.City, "", new { @class = "form-control" })
                                                            </div>
                                                        </div>
                                                        <!--/span-->
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label class="control-label mb-10">State</label>
                                                                @Html.TextBoxFor(m => m.State, "", new { @class = "form-control" })
                                                            </div>
                                                        </div>
                                                        <!--/span-->
                                                    </div>
                                                    <!-- /Row -->
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label class="control-label mb-10">Post Code</label>
                                                                @Html.TextBoxFor(m => m.ZIP, "", new { @class = "form-control" })
                                                            </div>
                                                        </div>
                                                        <!--/span-->
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label class="control-label mb-10">Country</label>
                                                                @Html.DropDownListFor(m => m.Country, new SelectList(ViewBag.CountryList, "Germany"), "--- Select Country ---", new { @class = "select-chosen" })
                                                                @Html.ValidationMessageFor(m => m.Country, "", new { @class = "form-control" })
                                                            </div>
                                                        </div>
                                                        <!--/span-->
                                                    </div>
                                                </div>
                                                <div class="form-actions mt-10">
                                                    <button type="submit" class="btn btn-sm btn-primary"> Submit</button>
                                                    <button type="button" class="btn btn-sm btn-default" data-dismiss="modal">Reset</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
            </div>
        </div>
        <!-- /Row -->

    </div>

    <!-- Footer -->
    <footer class="footer container-fluid pl-30 pr-30">
        <div class="row">
            <div class="col-sm-12">
                <p>2017 &copy; Doodle. Pampered by Hencework</p>
            </div>
        </div>
    </footer>
    <!-- /Footer -->
</div>
<!-- /Main Content -->

