@model MediaAdmin.MediaEntity.Customer

@{ 
    ViewBag.Title = "AdminCustomer: Edit " + @Model.Name;
    Layout = "~/Views/Shared/_ListCustomerLayout.cshtml";
    HtmlHelper.ClientValidationEnabled = false;
    HtmlHelper.UnobtrusiveJavaScriptEnabled = false;
}
  
			<!-- Main Content -->
<div class="page-wrapper">
    <div class="container-fluid">

        <!-- Title -->
        <div class="row heading-bg">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h5 class="txt-dark">form layout</h5>
            </div>

            <!-- Breadcrumb -->
            <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                <ol class="breadcrumb">
                    <li><a href="index.html">Dashboard</a></li>
                    <li><a href="#"><span>form</span></a></li>
                    <li class="active"><span>form-layout</span></li>
                </ol>
            </div>
            <!-- /Breadcrumb -->

        </div>
        <!-- /Title -->
        <!-- Row -->
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default card-view">
                    <div class="panel-heading">
                        <div class="pull-left">
                            <h6 class="panel-title txt-dark">with two columns</h6>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    @using (Html.BeginForm("Edit", "AdminCustomer", new { @class = "panel-wrapper collapse in", role="form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-sm-12 col-xs-12">
                                    <div class="form-wrap">        
                                        <form action="#">
                                            <div class="form-body">
                                                <h6 class="txt-dark capitalize-font"><i class="zmdi zmdi-account mr-10"></i>Customer's Info</h6>
                                                <hr class="light-grey-hr" />
                                                <div class="row">
                                                    @Html.ValidationSummary(true)
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label class="control-label mb-10">First Name</label>
                                                            @Html.TextBoxFor(m => m.Name, "", new { @class= "form-control" })
                                                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                    <!--/span-->
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label class="control-label mb-10">Last Name</label>
                                                            @Html.TextBoxFor(m => m.LastName, "", new { @class = "form-control" })
                                                            @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })                                                           
                                                        </div>
                                                    </div>
                                                    <!--/span-->
                                                </div>
                                                <!-- /Row -->
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label class="control-label mb-10">Email</label>
                                                            @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control" })
                                                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })                                                       
                                                        </div>
                                                    </div>
                                                    <!--/span-->
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label class="control-label mb-10">Phone number</label>
                                                            @Html.TextBoxFor(m => m.PhoneNumber, "", new { @class = "form-control" })
                                                            @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                    <!--/span-->
                                                </div>
                                                <!-- /Row -->
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label class="control-label mb-10">Cell phone number</label>
                                                            @Html.TextBoxFor(m => m.CellPhoneNumber, "", new { @class = "form-control" })
                                                            @Html.ValidationMessageFor(m => m.CellPhoneNumber, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                    <!--/span-->
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label class="control-label mb-10">Customer Typ</label>
                                                             @Html.DropDownListFor(m => m.CustomerTyp,Model.CustomerTypList,new { @class="form-control" })                                                             
                                                        </div>
                                                    </div>
                                                    <!--/span-->
                                                </div>
                                                <!-- /Row -->
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <label class="control-label mb-10">Company name</label>
                                                        @Html.TextBoxFor(m => m.CompanyName, "", new { @class = "form-control" })
                                                    </div>
                                                </div>

                                                <div class="seprator-block"></div>

                                                <h6 class="txt-dark capitalize-font"><i class="zmdi zmdi-account-box mr-10"></i>address</h6>
                                                <hr class="light-grey-hr" />
                                                <div class="row">
                                                    <div class="col-md-12 ">
                                                        <div class="form-group">
                                                            <label class="control-label mb-10">Street</label>
                                                            @Html.TextBoxFor(m => m.Address, "", new { @class="form-control"})
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label class="control-label mb-10">City</label>
                                                            @Html.TextBoxFor(m => m.City, "", new { @class = "form-control" })
                                                        </div>
                                                    </div>
                                                    <!--/span-->
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label class="control-label mb-10">State</label>
                                                            @Html.TextBoxFor(m => m.State, "", new { @class = "form-control" })
                                                        </div>
                                                    </div>
                                                    <!--/span-->
                                                </div>
                                                <!-- /Row -->
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label class="control-label mb-10">Post Code</label>
                                                            @Html.TextBoxFor(m => m.ZIP, "", new { @class = "form-control" })
                                                        </div>
                                                    </div>
                                                    <!--/span-->
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label class="control-label mb-10">Country</label>
                                                            @Html.DropDownListFor(m => m.Country, new SelectList(ViewBag.CountryList, "Germany"), "--- Select Country ---", new { @class="form-control"})
                                                            @Html.ValidationMessageFor(m => m.Country, "", new { @class = "form-control" })
                                                        </div>
                                                    </div>
                                                    <!--/span-->
                                                </div>
                                            </div>
                                            <div class="form-actions mt-10">
                                                <button type="submit" class="btn btn-success  mr-10"> Save</button>
                                                <button type="button" class="btn btn-default">Cancel</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>                   
                    }
                </div>
            </div>
        </div>
        <!-- /Row -->

    </div>

    <!-- Footer -->
    <footer class="footer container-fluid pl-30 pr-30">
        <div class="row">
            <div class="col-sm-12">
                <p>2017 &copy; Doodle. Pampered by Hencework</p>
            </div>
        </div>
    </footer>
    <!-- /Footer -->
</div>
<!-- /Main Content -->